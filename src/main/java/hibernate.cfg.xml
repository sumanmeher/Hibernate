<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>        
<session-factory>
      <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
      <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibops</property>
      <property name="hibernate.connection.username">root</property>
      <property name="hibernate.connection.password">admin@12345</property>
      <property name="hibernate.connection.pool_size">10</property>
      <property name="show_sql">true</property>
      <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
      <property name="hibernate.hbm2ddl.auto">update</property>                 
      <mapping resource="Student.hbm.xml"/>
      <mapping resource="Cricketer.hbm.xml"/>
      <mapping resource="Employee.hbm.xml"/>
      <mapping resource="Address.hbm.xml"/>
      <mapping resource="Book.hbm.xml"/>
      <mapping resource="Publisher.hbm.xml"/>
      <mapping resource="Student1.hbm.xml"/>
      <mapping resource="Course.hbm.xml"/>
</session-factory>
</hibernate-configuration>
